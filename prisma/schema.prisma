generator client {
  provider      = "prisma-client-js"
  output        = "../lib/generated/prisma"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// Enums
enum ClassRoomType {
  theoretical
  Workshop
  ComputerLab
  Gym
}

enum Shift {
  MorningShift
  LateShift
}

enum Day {
  M
  T
  W
  TH
  F
}

enum Role {
  ADMIN
  TEACHER
}

// User model (for authentication)
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String?
  name      String?
  image     String?
  role      Role     @default(ADMIN)
  teacherId String?  @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  teacher   Teacher? @relation(fields: [teacherId], references: [id], onDelete: SetNull)

  @@map("users")
}

// Teachers table
model Teacher {
  id           String   @id @default(uuid())
  firstName    String
  lastName     String
  idNumber     String   @unique @db.VarChar(20)
  fileNumber   String   @db.VarChar(40)
  birthdate    DateTime
  nationality  String   @db.VarChar(40)
  address      String   @db.VarChar(100)
  neighborhood String   @db.VarChar(100)
  googleId     String?  @unique
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  user                        User?
  subjectsTeachers            SubjectsTeacher[]
  availabilities              Availability[]
  teacherAttendances          TeacherAttendance[]
  incompatibilityDeclarations IncompatibilityDeclaration[]

  @@map("teachers")
}

// Subjects table
model Subject {
  id        String   @id @default(uuid())
  name      String   @db.VarChar(40)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  coursesSubjects       CourseSubject[]
  subjectsTeachers      SubjectsTeacher[]
  teacherAvailabilities TeacherAvailability[]

  @@map("subjects")
}

// CourseSubject junction table - links subjects to courses with specific module counts
model CourseSubject {
  id        String   @id @default(uuid())
  courseId  String
  subjectId String
  modules   Int      @default(2) // Module count specific to this course (minimum 2)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  course  Course  @relation(fields: [courseId], references: [id], onDelete: Cascade)
  subject Subject @relation(fields: [subjectId], references: [id], onDelete: Cascade)

  @@unique([courseId, subjectId])
  @@map("courses_subjects")
}

// SubjectsTeachers junction table - now includes courseId to specify which course the teacher teaches
model SubjectsTeacher {
  id        String   @id @default(uuid())
  teacherId String
  subjectId String
  courseId  String   // Which course this teacher teaches for this subject
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  teacher Teacher @relation(fields: [teacherId], references: [id], onDelete: Cascade)
  subject Subject @relation(fields: [subjectId], references: [id], onDelete: Cascade)
  course  Course  @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@unique([teacherId, subjectId, courseId])
  @@map("subjects_teachers")
}

// Classrooms table
model Classroom {
  id            String        @id @default(uuid())
  name          String        @db.VarChar(40)
  classRoomType ClassRoomType
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  // Relations
  courses Course[]

  @@map("classrooms")
}

// Courses table
model Course {
  id           String   @id @default(uuid())
  name         String   @db.VarChar(30)
  shift        Shift
  cycle        String   @db.VarChar(5)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  classRoomId           String
  classroom             Classroom             @relation(fields: [classRoomId], references: [id], onDelete: Cascade)
  coursesSubjects       CourseSubject[]
  subjectsTeachers      SubjectsTeacher[]
  teacherAvailabilities TeacherAvailability[]
  students              Student[]
  studentAttendances    StudentAttendance[]

  @@map("courses")
}

// Availabilities table
model Availability {
  id        String   @id @default(uuid())
  teacherId String
  day       Day
  timeRanges String[] // Array of TIME values
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  teacher Teacher @relation(fields: [teacherId], references: [id], onDelete: Cascade)
  teacherAvailabilities TeacherAvailability[]

  @@unique([teacherId, day])
  @@map("availabilities")
}

// TeacherAvailability table - links specific time slots to subjects
model TeacherAvailability {
  id           String   @id @default(uuid())
  availabilityId String
  timeRange    String   // Specific time slot (e.g., "Módulo 1 (7:30-8:10)")
  subjectId    String?
  courseId     String?  // Course ID to track which course this subject assignment is for
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  availability Availability @relation(fields: [availabilityId], references: [id], onDelete: Cascade)
  subject      Subject? @relation(fields: [subjectId], references: [id], onDelete: SetNull)
  course       Course? @relation(fields: [courseId], references: [id], onDelete: SetNull)

  @@unique([availabilityId, timeRange])
  @@map("teacher_availabilities")
}

// Students table
model Student {
  id           String   @id @default(uuid())
  firstName    String
  lastName     String
  idNumber     String   @unique @db.VarChar(20)
  fileNumber   String   @db.VarChar(40)
  birthdate    DateTime
  nationality  String   @db.VarChar(40)
  address      String   @db.VarChar(100)
  neighborhood String   @db.VarChar(100)
  email        String?  @unique
  googleId     String?  @unique
  courseId     String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  course             Course              @relation(fields: [courseId], references: [id], onDelete: Cascade)
  studentAttendances StudentAttendance[]

  @@map("students")
}

// Teacher Attendance
model TeacherAttendance {
  id          String    @id @default(uuid())
  teacherId   String
  date        DateTime  @db.Date
  status      AttendanceStatus @default(PRESENT)
  justification String? @db.Text
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  teacher Teacher @relation(fields: [teacherId], references: [id], onDelete: Cascade)

  @@unique([teacherId, date])
  @@map("teacher_attendances")
}

// Student Attendance
model StudentAttendance {
  id          String    @id @default(uuid())
  studentId   String
  courseId    String
  date        DateTime  @db.Date
  status      AttendanceStatus @default(PRESENT)
  verifiedBy  String?   // Google ID of who verified (teacher or student themselves)
  qrCodeUsed  Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  student Student @relation(fields: [studentId], references: [id], onDelete: Cascade)
  course  Course  @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@unique([studentId, date])
  @@map("student_attendances")
}

// Attendance Status Enum
enum AttendanceStatus {
  PRESENT
  ABSENT
  LATE
  JUSTIFIED
}

// Incompatibility Declaration - tracks time slots where teachers work at other schools
model IncompatibilityDeclaration {
  id              String   @id @default(uuid())
  teacherId       String
  documentUrl     String?  // URL to scanned declaration document
  uploadedAt      DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  // Incompatible time slots (where teacher CANNOT teach)
  incompatibilities IncompatibilitySlot[]
  
  teacher Teacher @relation(fields: [teacherId], references: [id], onDelete: Cascade)

  @@map("incompatibility_declarations")
}

// Individual time slot where teacher is unavailable due to work at another school
model IncompatibilitySlot {
  id           String   @id @default(uuid())
  declarationId String
  day          Day
  timeRange    String   @db.VarChar(100) // e.g., "Módulo 1 (7:30-8:10)"
  createdAt    DateTime @default(now())
  
  declaration IncompatibilityDeclaration @relation(fields: [declarationId], references: [id], onDelete: Cascade)

  @@map("incompatibility_slots")
}
